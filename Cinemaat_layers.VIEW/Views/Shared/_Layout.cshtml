<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinemaat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/API/sweetalert2.css" />
</head>
<body>    
    <header>
        <nav class="navbar navbar-expand-lg bg-dark box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Homepage/cinemaat_logo.png" alt="Cinemaat" width="50" height="50"/> Cinemaat
                </a>
                <button class="navbar-toggler text-white" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Movie" asp-action="AllMovies">Alle Films</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Movie" asp-action="Index">Films Beheren</a>
                        </li>
                        @*<li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="UserRegistration" asp-action="CreateUser">Registreren</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>*@
                    </ul>
                    <ul class="navbar-nav mr-auto mr-sm-2">
                        @{
                            var Email = new Byte[20];
                            bool nameOK = Context.Session.TryGetValue("Email", out Email);
                        }
                        @{
                            if (nameOK)
                            {
                                string EmailString = System.Text.Encoding.UTF8.GetString(Email);
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Favourite" asp-action="Index">Mijn Account</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Logout">Logout @EmailString</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="UserRegistration" asp-action="CreateUser">Registreren</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container text-white">
            &copy; 2020 - Cinemaat, Gemaakt door Joep Sales - <a class="text-info" data-toggle="tooltip" data-placement="top" title="No one really reads this..." asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert2.all.js"></script>
    <script src="~/js/ShowSwal.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
