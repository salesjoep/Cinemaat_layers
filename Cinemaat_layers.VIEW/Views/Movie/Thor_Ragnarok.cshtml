@model IEnumerable<Cinemaat_layers.VIEW.Models.MovieViewModel>

@{
    ViewBag.Title = "Thor: Ragnarok";
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Thor_Ragnarok_Style.css" />
</head>

<body>
    <div class="container movie-details">
        <div class="row">
            <div class="col-md-6 left-box">

                @{
                    string movieName;
                    foreach (var item in Model)
                    {
                        if (item.MovieName == "Thor: Ragnarok")
                        {
                            movieName = item.MovieName;
                            <h1>@movieName</h1>
                            break;
                        }
                        else
                        {
                            continue;
                            <h1>Error: Could not load Movie Title.</h1>

                        }
                    }
                }

                @{
                    string movieDesciption;
                    foreach (var item in Model)
                    {
                        if (item.MovieName == "Thor: Ragnarok")
                        {
                            movieDesciption = item.Description;
                            <p>@movieDesciption</p>
                            break;
                        }
                        else
                        {
                            continue;
                            <p>Error:  Could not load Movie Description.</p>
                        }
                    }
                }





                <p>Cast: </p>
                <div class="casting">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/Black_widow.jpg" title="Scarlett Johansson">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/iron_man.jpg" title="Robert Downey Jr.">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/thor.jpeg" title="Chris Hamsworth">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/starlord.jpg" title="Chris Pratt">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/spiderman.jpg" title="Tom Holland">
                </div>
                <a href="#"><i class=""></i>Selecteer film</a>
                <a href="#" class="download-btn"><i class=""></i>Voeg aan favorieten toe</a>

            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/Homepage/Thor_ragnorok.jpg" class="movie-img">
            </div>
        </div>
    </div>
    <div class="container series">
        <h3>Bekijk ook</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="No_Time_To_Die">
                            <img src="~/images/All Movies/No_Time_To_Die.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Spiderman_Homecoming">
                            <img src="~/images/All Movies/Spiderman_Homecoming.jpg">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Doctor_Strange">
                            <img src="~/images/All Movies/Doctor_Strange.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Captain_Marvel">
                            <img src="~/images/All Movies/Captain_Marvel.jpg">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Antman">
                            <img src="~/images/All Movies/Ant_Man.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Black_Panther">
                            <img src="~/images/All Movies/Black_panther.jpg">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>