@model IEnumerable<Cinemaat_layers.VIEW.Models.MovieViewModel>

@{
    ViewBag.Title = "Ant Man";
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Antman_Style.css" />
</head>

<body>
    <div class="container movie-details">
        <div class="row">
            <div class="col-md-6 left-box">

                @{
                    string movieName;
                    foreach (var item in Model)
                    {
                        if (item.MovieName == "Ant Man")
                        {
                            movieName = item.MovieName;
                            <h1>@movieName</h1>
                            break;
                        }
                        else
                        {
                            continue;
                            <h1>Error: Could not load Movie Title.</h1>

                        }
                    }
                }

                @{
                    string movieDesciption;
                    foreach (var item in Model)
                    {
                        if (item.MovieName == "Ant Man")
                        {
                            movieDesciption = item.Description;
                            <p>@movieDesciption</p>
                            break;
                        }
                        else
                        {
                            continue;
                            <p>Error:  Could not load Movie Description.</p>
                        }
                    }
                }

                @{
                    double moviePrice;
                    foreach (var item in Model)
                    {
                        if (item.MovieName == "Ant Man")
                        {
                            moviePrice = item.Price;
                            <p>Filmprijs: €@moviePrice </p>
                            break;
                        }
                        else
                        {
                            continue;
                        }
                    }
                }





                <p>Cast: </p>
                <div class="casting">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/Black_widow.jpg" title="Scarlett Johansson">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/iron_man.jpg" title="Robert Downey Jr.">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/thor.jpeg" title="Chris Hamsworth">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/starlord.jpg" title="Chris Pratt">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/spiderman.jpg" title="Tom Holland">
                </div>
                @*<a asp-area="" asp-controller="Agenda" asp-action="Avengers_Endgame">Selecteer film</a>*@
                @{
                    foreach (var item in Model)
                    {
                        if (item.MovieId == 24)
                        {
                            @Html.ActionLink("Selecteer film", "Agenda", "Agenda", new { movieId = item.MovieId });
                            break;
                        }
                        else
                        {
                            continue;
                        }
                        @*<a href="#" class="download-btn"><i class=""></i>@Url.ActionLink("Lees Reviews", "Index", "Review", new );</a>*@

                    }
                }
                @{
                    foreach (var item in Model)
                    {
                        if (item.MovieId == 24)
                        {
                            @Html.ActionLink("Lees Reviews", "Index", "Review", new { movieId = item.MovieId });
                            break;
                        }
                        else
                        {
                            continue;
                        }
                        @*<a href="#" class="download-btn"><i class=""></i>@Url.ActionLink("Lees Reviews", "Index", "Review", new );</a>*@

                    }
                }

                @{
                    foreach (var item in Model)
                    {
                        if (item.MovieId == 24)
                        {
                            @Html.ActionLink("Voeg toe aan favorieten", "Create", "Favourite", new { movieId = item.MovieId, movieName = item.MovieName });
                            break;
                        }
                        else
                        {
                            continue;
                        }
                        @*<a href="#" class="download-btn"><i class=""></i>@Url.ActionLink("Lees Reviews", "Index", "Review", new );</a>*@

                    }
                }


            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/All Movies/Ant_Man.jpg" class="movie-img">
            </div>
        </div>
    </div>
    <div class="container series">
        <h3>Bekijk ook</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Thor_Ragnarok">
                            <img src="~/images/Homepage/Thor_ragnorok.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Spiderman_Homecoming">
                            <img src="~/images/All Movies/Spiderman_Homecoming.jpg">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Doctor_Strange">
                            <img src="~/images/All Movies/Doctor_Strange.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Captain_Marvel">
                            <img src="~/images/All Movies/Captain_Marvel.jpg">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Captain_America_Winter_Soldier">
                            <img src="~/images/All Movies/Captain_America_Winter_Soldier.jpg">
                        </a>
                    </div>
                    <div class="col-6">
                        <a asp-area="" asp-controller="Movie" asp-action="Black_Panther">
                            <img src="~/images/All Movies/Black_panther.jpg">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>