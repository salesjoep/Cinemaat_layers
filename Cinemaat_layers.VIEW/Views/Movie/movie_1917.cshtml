@model IEnumerable<Cinemaat_layers.VIEW.Models.MovieViewModel>

@{
    ViewBag.Title = "1917";
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/1917style.css" />
</head>

<body>
    <div class="container movie-details">
        <div class="row">
            <div class="col-md-6 left-box">
                <h1>1917</h1>
                <p>
                    1917 is een Amerikaans-Britse oorlogsfilm uit 2019 onder regie van Sam Mendes.
                    De hoofdrollen worden vertolkt door Dean-Charles Chapman en George MacKay.
                </p>


                <p>Cast: </p>
                <div class="casting">
                    <img src="~/images/Homepage/Movies/1917/George_Mac_Kay.jpg" title="Scarlett Johansson">
                    <img src="~/images/Homepage/Movies/1917/Dean_Charles.jpg" title="Robert Downey Jr.">
                    <img src="~/images/Homepage/Movies/1917/Richard_Madden.jpg" title="Chris Hamsworth">
                    <img src="~/images/Homepage/Movies/1917/Benedict_Cumberbatch.jpg" title="Chris Pratt">
                    <img src="~/images/Homepage/Movies/1917/Colin_Firth.jpg" title="Tom Holland">
                </div>
                <a href="#"><i class=""></i>Select Movie</a>
                <a href="#" class="download-btn"><i class=""></i>Add To Favourites</a>

            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/Homepage/Movies/1917/1917_cover.jpg" class="movie-img">
            </div>
        </div>
    </div>
    <div class="container series">
        <h3>Popular Movies</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"><img src="~/images/Homepage/Thor_ragnorok.jpg"></div>
                    <div class="col-6"><img src="~/images/Homepage/Avengers_age_of_ultron.jpg"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"><img src="~/images/Homepage/Avengers_infinity_war.jpg"></div>
                    <div class="col-6"><img src="~/images/Homepage/Captain_America_civil_war.jpg"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"> <img src="~/images/Homepage/Guardians_of_the_galaxy_Volume_2.png"></div>
                    <div class="col-6"> <img src="~/images/Homepage/Spiderman_farm_from_home.jpg"></div>
                </div>
            </div>
        </div>
    </div>
</body>