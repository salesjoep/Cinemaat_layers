@model IEnumerable<Cinemaat_layers.VIEW.Models.MovieViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/MovieStyle.css" />
</head>

<body>
    <div class="container movie-details">
        <div class="row">
            <div class="col-md-6 left-box">
                @foreach (var item in Model)
                {
                    <h1>@Html.DisplayFor(modelItem => item.MovieName)</h1>
                    break;
                }

                @foreach (var item in Model)
                {
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    break;
                }


                <p>Cast: </p>
                <div class="casting">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/Black_widow.jpg" title="Scarlett Johansson">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/iron_man.jpg" title="Robert Downey Jr.">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/thor.jpeg" title="Chris Hamsworth">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/starlord.jpg" title="Chris Pratt">
                    <img src="~/images/Homepage/Movies/Avengers_Endgame/spiderman.jpg" title="Tom Holland">
                </div>
                <a href="#"><i class="fas fa-play"></i>Watch Now</a>
                <a href="#" class="download-btn"><i class="fas fa-arrow-down"></i>Download</a>

            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/Homepage/Movies/Avengers_Endgame/Avengers_Endgame.jpg" class="movie-img">
            </div>
        </div>
    </div>
    <div class="container series">
        <h3>Popular Movies</h3>
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"><img src="~/images/Homepage/Thor_ragnorok.jpg"></div>
                    <div class="col-6"><img src="~/images/Homepage/Avengers_age_of_ultron.jpg"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"><img src="~/images/Homepage/Avengers_infinity_war.jpg"></div>
                    <div class="col-6"><img src="~/images/Homepage/Captain_America_civil_war.jpg"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-6"> <img src="~/images/Homepage/Guardians_of_the_galaxy_Volume_2.png"></div>
                    <div class="col-6"> <img src="~/images/Homepage/Spiderman_farm_from_home.jpg"></div>
                </div>
            </div>
        </div>
    </div>
</body>